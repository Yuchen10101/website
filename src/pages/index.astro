---
import BaseLayout from '../layouts/BaseLayout.astro';
import SelfIntroCard from '../components/SelfIntroCard.astro';
import PhotoCard from '../components/PhotoCard.astro';
import ResearchCard from '../components/ResearchCard.astro';
import ProjectCard from '../components/ProjectCard.astro';
const pageTitle = "Yuchen Yang 杨雨晨 💬";
---
<BaseLayout pageTitle={pageTitle}>
    <div class="card-container">
        <SelfIntroCard />
        <PhotoCard />
    </div>
    <ResearchCard />
    <ProjectCard />
</BaseLayout>

<style>
.card-container {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-left: auto;
    margin-right: auto;
	width: 80%; 
    max-width: 1600px;
}

.card {
    margin-right: 20px; /* 为每个卡片添加右侧外边距 */
}

.card:last-child {
    margin-right: 0; /* 最后一个卡片不需要右侧外边距 */
}
</style>
