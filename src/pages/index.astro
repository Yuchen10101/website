---
import BaseLayout from '../layouts/BaseLayout.astro';
import SelfIntroCard from '../components/SelfIntroCard.astro';
import PhotoCard from '../components/PhotoCard.astro';
import ResearchCard from '../components/ResearchCard.astro';
import ExperienceCard from '../components/ExperienceCard.astro';
import ProjectCard from '../components/ProjectCard.astro';
const pageTitle = "Yuchen Yang Êù®Èõ®Êô® üí¨";
---
<BaseLayout pageTitle={pageTitle}>
    <div class="card-container">
        <SelfIntroCard />
        <PhotoCard />
    </div>
    <ResearchCard />
    <ExperienceCard />
    <ProjectCard />
</BaseLayout>

<style>
.card-container {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    align-items: center;
    margin-left: auto;
    margin-right: auto;
    width: 90%; 
    max-width: 1600px;
}

.card {
    flex: 1 1 400px;
    margin-right: 20px;
}

.card:last-child {
    margin-right: 0;
}

@media (max-width: 768px) {
    .card {
        flex-basis: 100%;
        margin-right: 0;
    }
}
</style>
