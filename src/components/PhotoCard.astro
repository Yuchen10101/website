---
// PhotoCard.astro
const imageSrc = "/website/photo.jpg";
const email = "mailto:yyc0o9i8u@sjtu.edu.cn";
const github = "https://github.com/Yuchen10101";
const cv = "/website/My_CV.pdf";
---
<div class="photo-card">
    <div class="image">
        <img src={imageSrc} alt="Photo" />
    </div>
    <div class="contact-info">
        <ol>
            <a href={email} class="contact-item">
                <svg class="icon" aria-hidden="true" focusable="false" role="img">
                    <use xlink:href="#icon-envelope"></use>
                </svg>
                <span>yyc0o9i8u@sjtu.edu.cn</span>
            </a>
            <a href={github} class="contact-item">
                <svg class="icon" aria-hidden="true" focusable="false" role="img">
                    <use xlink:href="#icon-github"></use></svg>
                <span>Yuchen10101</span>
            </a>
            <a href={cv} class="contact-item">
                <svg class="icon" aria-hidden="true" focusable="false" role="img">
                    <use xlink:href="#icon-file"></use>
                </svg>
                <span>My CV</span>
            </a>
        </ol>
    </div>
</div>

<style>
    .photo-card {
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2); 
        overflow: hidden;
        transition: transform 0.3s ease-in-out;
        max-width: 400px;
        margin-top: 20px;
        margin-bottom: 20px;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
    }

    .photo-card:hover {
        transform: translateY(-5px);
    }

    .image img {
        width: 100%;
        height: auto;
        display: block;
    }

    .contact-info {
        padding: 5px;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
    }

    .contact-item {
        margin: 10px 0;
        text-decoration: none;
        color: rgba(0,0,0,0.7);
        display: flex;
        align-items: center;
    }

    .contact-item svg {
        width: 20px;
        height: 24px; 
        fill: currentColor;
    }

    .contact-item span {
        margin-left: 8px;
        font-size: 1rem;
    }

    .contact-item:hover svg,
    .contact-item:hover span {
    fill: rgba(0,0,0,0.5);
    color: rgba(0,0,0,0.5);
    }

</style>

<svg xmlns="http://www.w3.org/2000/svg" style="display: none;">
    <symbol id="icon-envelope" viewBox="0 0 8 6">
        <path class="icon" d="m0 0h8v6h-8zm.75 .75v4.5h6.5v-4.5zM0 0l4 3 4-3v1l-4 3-4-3z"/>
    </symbol>
