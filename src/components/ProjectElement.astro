---
// ProjectElement.astro
const { url, title, imageSrc, description } = Astro.props;
---

<div class="project-element">
    <div class="image">
        <img src={imageSrc} alt="Project Img" />
    </div>
    <div class="content">
        <h2 class="title">
            <a href={url} title={title}>{title}</a>
        </h2>
        <p>{description}</p>
    </div>
</div>

<style>
    .project-element {
        display: flex;
        flex-direction: column;
        align-items: center;
        width: 90%; 
        max-width: 330px;
        margin-left: auto;
        margin-right: auto;
        margin-top: 20px;
        margin-bottom: 20px;
        transition: transform 0.3s ease-in-out;
    }

    .project-element:hover {
        transform: translateY(-5px);
    }

    .image {
        width: 100%;
        height: auto;
        margin-bottom: 20px;
    }

    .image img {
        width: 100%;
        height: auto;
        display: block;
    }

    .content {
        text-align: center;
        width: 100%;
    }

    .content h2.title a {
        text-decoration: none;
        color: inherit;
    }

    .content h2.title a:hover {
        text-decoration: underline;
    }

    .content p {
        margin: 0;
        font-size: 1.1rem;
        color: rgb(85, 85, 85);
    }

    .content p strong {
        font-weight: bold;
    }
</style>